<h1 class="title">Orders</h1>

<div id="orderLink">
    <h5>
        <a class="underline js-orderActive" data-csrf="{{@root.csrf}}" href="#">New</a>
        <!--<a class="underline verticalLine js-orderLink" href="/adminOrders/inProgress">In progress</a>-->
        <a class="underline verticalLine js-orderPassive" data-csrf="{{@root.csrf}}" href="#">Delivered</a>
    </h5></br>
</div>

<div id="card">
{{#if orders.length}}
    {{#each orders}}
        <div class="col s6 offset-s3">
            <div class="card">
                <div class="card-action">
                    <span class="card-title">
                        <b>Order</b> <small>{{_id}}</small>
                    </span>
                    <p class="date">{{date}}</p>
                    <p><em><b>{{user.name}}</b></em> ({{user.userId.email}})</p>
                    <p><em><b>Address:</b></em> {{address}}</p>

                    <ol id="list">
                        {{#each products}}
                            <li >
                                <b>{{product.name}}</b> (x{{count}})
                            </li>
                        {{/each}}
                    </ol>
                    <hr>
                    <div class="sp">
                        <p><em><b>Total price: </b></em><span class="price">{{price}}</span> </p>
                        <button class="btn js-done" data-id="{{_id}}" data-csrf="{{@root.csrf}}" data-user="{{user.userId}}">Delivered</button>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <h4>No orders with that state were found</h4>
{{/if}}
</div>

