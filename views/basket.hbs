<h1 class="title">Basket</h1>

<div id="card">
    {{#if products.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Count</th>
                <th></th>
            </tr>
            </thead>

            <tbody>
            {{#each products}}
            <tr>
                <td>{{name}}</td>
                <td class="price small">{{price}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn redd js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button>
                </td>
            </tr>
            {{/each}}
            </tbody>
        </table>
        <p><b>Total Price: </b> <span class="price total">{{price}}</span></p>

        <form action="/orders" method="post">
            <div class="input-field">
                <input id="address" name="address" type="text" class="validate" required >
                <label for="address">Delivery address: </label>
                <span class="helper-text" data-error="Enter the valid address"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn ggreen">Make an order</button>
        </form>

    {{else}}
        <p>The basket is empty</p>
    {{/if}}
</div>