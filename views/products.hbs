
<h1 class="title">Products</h1></br>

<form action="/products/search" method="post">
    <div class="row" style="padding-left:150px  ">
        <div class="col s8 ">
            <div class="input-field">
                <input id="pName" name="pName" type="text" class="validate" required>
                <label for="pName">Product name: </label>
                <span class="helper-text" data-error="Enter the valid name"></span>
            </div>
        </div>
        <input type="hidden" name="_csrf" value="{{@root.csrf}}">
        <div class="col s4 ">
            <button type="submit" class=" btn js-search" data-csrf="{{@root.csrf}}">Search </button>
        </div>
    </div>
</form>


<div class="cards shown">
    {{#if products.length}}
        {{#each products}}

                <div class="col s3 ">
                    <div class="card shown">
                        <div class="card-image ">
                            <img src="{{img}}" alt="{{name}}">
                        </div>
                        <div class="card-content">
                            <span class="card-title">{{name}}</span>
                            <p>{{description}}</p>
                            <p class="price">{{price}}</p>
                        </div>
                        <div class="card-action actions" >
                            {{#if @root.isAdmin}}
                                <a class="link" href="/products/{{id}}/edit?allow=true" >Edit </a>
                            {{/if}}
                            {{#if @root.isAuth}}
                                <form action="/card/add" method="post">
                                    <input type="hidden" name="_csrf" value="{{@root.csrf}}">
                                    <input type="hidden" name="id" value="{{id}}">
                                    <button type="submit" class="btn ">Buy</button>
                                </form>
                            {{/if}}
                        </div>
                    </div>
                </div>

        {{/each}}
    {{else}}
        <p>No products</p>
    {{/if}}
</div>